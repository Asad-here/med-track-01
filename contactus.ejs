<section style="background: linear-gradient(135deg, #FFDEE9 0%, #B5FFFC 100%); color: #212121; font-family: 'Poppins', sans-serif; padding: 80px 0;">
  <div style="max-width: 600px; margin: auto; padding: 0 20px;">

    <div style="text-align: center; margin-bottom: 50px;">
      <h2 style="color: #673ab7; font-size: 42px; margin-bottom: 15px; font-weight: 800;">Contact Us</h2>
      <p style="font-size: 20px; color: #444;">We'd love to hear from you about how we can improve your healthcare experience.</p>
    </div>

    <form id="stepForm">
      <!-- Name field visible initially -->
      <div class="form-group" style="margin-bottom: 20px;">
        <label for="name" style="display: block; margin-bottom: 6px; font-weight: 600; color: #212121;">Name</label>
        <input type="text" id="name" name="name" required
               style="width: 100%; padding: 14px; border: 1px solid #ccc; border-radius: 8px; font-size: 16px;">
      </div>

      <!-- Email hidden initially -->
      <div class="form-group hidden" style="margin-bottom: 20px;">
        <label for="email" style="display: block; margin-bottom: 6px; font-weight: 600; color: #212121;">Email</label>
        <input type="email" id="email" name="email" required
               style="width: 100%; padding: 14px; border: 1px solid #ccc; border-radius: 8px; font-size: 16px;">
      </div>

      <!-- Message hidden initially -->
      <div class="form-group hidden" style="margin-bottom: 20px;">
        <label for="message" style="display: block; margin-bottom: 6px; font-weight: 600; color: #212121;">Message</label>
        <textarea id="message" name="message" required rows="5"
                  style="width: 100%; padding: 14px; border: 1px solid #ccc; border-radius: 8px; font-size: 16px;"></textarea>
      </div>

      <!-- Submit button hidden initially -->
      <button type="submit" class="hidden"
              style="background-color: #673ab7; color: #fff; border: none; padding: 16px 32px; font-size: 18px; font-weight: 700; border-radius: 8px; cursor: pointer; transition: background-color 0.3s ease;">
        Send Message
      </button>

      <!-- Gmail info below button -->
      <p style="margin-top: 12px; font-size: 12px; color: #555; text-align: center;">
        Our Gmail: <a href="mailto:contact@medtrack.com" style="color: #673ab7; text-decoration: underline;">contact@medtrack.com</a>
      </p>
    </form>
  </div>

  <style>
    .hidden {
      display: none;
    }
  </style>

  <script>
    const nameInput = document.getElementById('name');
    const emailGroup = nameInput.parentElement.nextElementSibling;
    const emailInput = document.getElementById('email');
    const messageGroup = emailGroup.nextElementSibling;
    const messageInput = document.getElementById('message');
    const submitBtn = messageGroup.nextElementSibling;

    nameInput.addEventListener('keydown', function(event) {
      if (event.key === 'Enter') {
        event.preventDefault();
        if(nameInput.value.trim() !== '') {
          emailGroup.classList.remove('hidden');
          emailInput.focus();
        }
      }
    });

    emailInput.addEventListener('keydown', function(event) {
      if (event.key === 'Enter') {
        event.preventDefault();
        if(emailInput.value.trim() !== '') {
          messageGroup.classList.remove('hidden');
          messageInput.focus();
        }
      }
    });

    messageInput.addEventListener('keydown', function(event) {
      if (event.key === 'Enter' && !event.shiftKey) {
        event.preventDefault();
        if(messageInput.value.trim() !== '') {
          submitBtn.classList.remove('hidden');
          submitBtn.focus();
        }
      }
    });
  </script>
</section>
